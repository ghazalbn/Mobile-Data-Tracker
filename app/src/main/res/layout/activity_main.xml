<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        tools:context=".MainActivity">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_4xl"
                    android:layout_marginTop="@dimen/size_4xl"
                    android:layout_marginEnd="@dimen/size_4xl"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/dataUsagesTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Data: 0 Kib"
                            android:textColor="@color/purple_500"
                            android:textSize="@dimen/text_l"
                            android:fontFamily="@font/iran_sans_regular"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/downUsagesTv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        style="@style/text.normal" />

                    <TextView
                        android:id="@+id/upUsagesTv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        style="@style/text.normal" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_4xl"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/size_4xl"
                    android:text="@string/month_usage"
                    style="@style/text.normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_4xl"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/size_4xl"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@color/purple_400"
                        android:maxEms="20"
                        android:padding="5dp"
                        android:text="تاریخ"
                        android:fontFamily="@font/iran_sans_regular"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey_200"
                        android:maxEms="20"
                        android:padding="5dp"
                        android:text="@string/mobile"
                        android:fontFamily="@font/iran_sans_regular"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/monthlyDataUsagesRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_4xl"
                    android:layout_marginEnd="@dimen/size_4xl"
                    tools:listitem="@layout/item_data_usage" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_4xl"
            android:layout_marginEnd="@dimen/size_4xl"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/purple_400"
                android:maxEms="20"
                android:padding="5dp"
                android:text="@string/last_30_days"
                android:fontFamily="@font/iran_sans_regular"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mobile_data_this_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/surface"
                android:maxEms="20"
                android:padding="5dp"
                android:textColor="@color/black" />

            <!--            <TextView-->
            <!--                android:id="@+id/wifi_data_this_month"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_margin="2dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:background="@color/surface"-->
            <!--                android:maxEms="20"-->
            <!--                android:padding="5dp"-->
            <!--                android:textColor="@color/black" />-->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>