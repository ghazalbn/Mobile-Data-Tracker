<resources>

    <style name="Theme.DataTracker" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/orange_100</item>
        <item name="colorPrimaryVariant">@color/orange_200</item>
        <item name="colorPrimaryDark">@color/surface</item>
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorAccent">@color/blue_400</item>
        <item name="colorControlHighlight">@color/grey_200</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">@font/iran_sans_regular</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="text.inverse">
        <item name="android:textColor">@color/inverse_text</item>
    </style>

    <style name="text.normal">
        <item name="android:textSize">@dimen/text_s</item>
    </style>
    <style name="clickableFocusable">
        <item name="android:background">@drawable/background_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/iran_sans_regular</item>
    </style>

    <style name="clickableFocusablePurple" parent="clickableFocusable">
        <item name="android:background">@drawable/background_ripple_purple</item>
    </style>
    <style name="clickableFocusable.Padding">
        <item name="android:padding">@dimen/size_s</item>
    </style>
    <style name="clickableFocusablePurple.Padding">
        <item name="android:paddingTop">@dimen/size_2xs</item>
        <item name="android:paddingBottom">@dimen/size_2xs</item>
        <item name="android:paddingRight">@dimen/size_m</item>
        <item name="android:paddingLeft">@dimen/size_m</item>
    </style>

    <style name="cardView">
        <item name="cardCornerRadius">@dimen/size_l</item>
        <item name="cardElevation">@dimen/size_xs</item>
    </style>
    <style name="cardView.transparent">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">0dp</item>
    </style>


</resources>